<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ConnectingActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wrapper_text_input_alamat_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:hintEnabled="false"
        app:helperTextEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_alamat_IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukkan alamat IP yang ingin kamu chat"
            android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_hubungkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapper_text_input_alamat_IP"
        app:layout_constraintVertical_bias="0.16000000"
        android:text="hubungkan"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_mulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_hubungkan"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="mulai"/>

</androidx.constraintlayout.widget.ConstraintLayout>